#version 330 core

in vec2 thefrag_TexCoord;
in vec3 thefrag_Normal;

out vec4 color;

uniform vec3 uni_ambientIntensity;
uniform sampler2D uni_Texture;
uniform vec3 uni_color;

void main()
{
			color = texture(uni_Texture, thefrag_TexCoord) * vec4(uni_ambientIntensity, 1.0) * vec4(uni_color, 1.0);
}