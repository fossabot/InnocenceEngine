#version 330 core

in vec2 thefrag_TexCoord;
out vec4 color;

uniform sampler2D uni_Texture;

void main()
{
	//color = vec4(1.0, 0.5, 0.2, 1.0);
	color = mix(texture(uni_Texture, thefrag_TexCoord), vec4(1.0, 0.5, 0.2, 1.0), 0.8);
	//color = texture(uni_Texture, thefrag_TexCoord) * vec4(1.0, 0.5, 0.2, 1.0);
}